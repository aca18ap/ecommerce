%h1 Listing reviews

%table.table
  %thead
    %tr
      %th Description
      %th Rating
      %th Hidden
      %th Rank
      %th
      %th
      %th

  %tbody
    - @reviews.each do |review|
      %tr
        %td= review.description
        %td= review.rating
        - if review.hidden
          %td= "Yes"
        - else
          %td= "No"        %td= review.rank
        %td= link_to 'Show', review
        %td= link_to 'Edit', edit_review_path(review)
        %td= link_to 'Destroy', review, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br
