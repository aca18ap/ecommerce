
.container
  %h1 Find a product by category
  .row.align-items-center.d-flex
    - @categories.each do |category|
      .col-xl-3.col-sm-12
        .card.bg-light.my-3
          .card-body.d-flex.flex-column.justify-content-around.text-center
            = link_to category.name, category
          .card-image
            = category.category_thumbnail
  %br

  - if can?(:manage, Category)
    = link_to 'New Category', new_category_path
