- content_for :title, "Team 4 - Site metrics"
= include_gon
= javascript_pack_tag('metrics/index')

.container-fluid.pad-edge
  .pt-5
    .h1 Metrics Summary
    .p The landing page has been visited #{@metrics.size} times.

    %table.table
      %thead
        %tr
          %th Page visited
          %th Date of visit
          %th Location

      %tbody
        .container#visits-barchart-div.justify-content-center
          %h2.text-center Page Visit Counts
          %svg#visits-barchart-plot.d-block.m-auto{height: "500px", width: "1000px"}

        .container#visits-linechart-div.justify-content-center
          %h2.text-center Landing Site Visits Over Time
          %svg#visits-linechart-plot.d-block.m-auto{height: "500px", width: "1000px"}


      - @metrics.each do |metric|
        %tr
          %td= metric.path
          %td= metric.from
          %td= metric.location
