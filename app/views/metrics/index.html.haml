- content_for :title, "Team 4 - Site metrics"
= include_gon

.container-fluid.pad-edge
  .pt-5
    .h1 Metrics summary
    .p The landing page has been visited #{@metrics.size} times.

    %table.table
      %thead
        %tr
          %th Page visited
          %th Date of visit
          %th Location

      %tbody
        .container#visits-barchart-div
          %svg#visits-barchart-plot{height: "500px", width: "500px"}


      - @metrics.each do |metric|
        %tr
          %td= metric.path
          %td= metric.from
          %td= metric.location
