.nested-fields.product-material-fields
    .form-inline
        .material_from_list.d-flex.align-middle
            .flex-fill
                = link_to_remove_association f, class: 'align-self-end pe-3' do
                    %i.fa.fa-minus-circle
                .d-inline-block#material= f.association :material, collection: Material.order(:name)
            .flex-fill
                .d-inline-block
                    .d-block
                        .row= f.label :percentage
                        .l-50.row= f.text_field :percentage, { :class => 'percentage', :type=>'number', :min=>'1', :max=>'100'}
    %br

