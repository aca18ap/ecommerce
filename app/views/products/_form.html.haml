-# frozen_string_literal: true
= simple_form_for(@product) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.input :name
    = f.input :description
    = f.input :mass
    = f.input :category
    = f.input :url
    = f.input :manufacturer
    = f.input :manufacturer_country
    = f.file_field :image
    = f.collection_check_boxes(:material_ids, Material.all, :id, :name, {}, {:multiple => true, :id => 'material_select'})
  .form-actions
    = f.button :submit
