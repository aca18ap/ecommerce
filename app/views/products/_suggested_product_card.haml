.col-3.my-3
  .card.h-100.suggested-product.shadow-sm
    .card-header.border-0.text-center
      .card-title.pt-1= p.name
    .card-body.d-flex.flex-column.justify-content-around
      = p.product_image 
      .card-subtitle.align-self-center.pt-1= p.price_with_currency
      .card-text.align-self-center.pt-1= p.co2_produced_with_unit
      %a.card-link.stretched-link{:href=>"#{product_path(p)}"}

