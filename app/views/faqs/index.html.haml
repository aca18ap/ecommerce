%h1.p-3 Frequently Asked Questions

.container#table
  %hr
  - @faqs.each do |faq|
    .row.justify-content-between
      .col
        %p.h3= faq.question
      .col-auto.mx-3.row
        .col.text-center
          - if faq.answer.nil? then
            %span.row.mx-auto.badge.bg-warning Unanswered
          - else
            %span.row.mx-auto.badge.bg-success Answered
          %p.m-1.text-nowrap
            = faq.clicks
            Reads | Rated
            =faq.usefulness
        .col.btn-group.my-auto{:role => "group"}
          = link_to 'View', faq, :class => "btn btn-primary"
          = link_to 'Edit', edit_faq_path(faq), :class => "btn btn-secondary"
          = link_to 'Destroy', faq, :method => :delete, :data => { :confirm => 'Are you sure?' }, :class => "btn btn-danger"
          = link_to 'Answer', answer_faq_path(faq), :class => "btn btn-primary"
    %hr
  %br

  = link_to 'Submit a New Question', new_faq_path, :class => "btn btn-primary"
