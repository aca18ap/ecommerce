.col-3
  .card.bg-light.my-3
    .card-header
      .card-title.align-self-center.pt-1= p.name
    .card-body.d-flex.flex-column.justify-content-around
      - if p.image.attached?
        %img= image_tag(p.image, 'class' => 'card-img-top')
      - else
        %img= image_tag("default-image.jpg", 'class' => 'card-img-top')  
      .card-subtitle.align-self-center.pt-1= p.price_with_currency
      .card-text-left.align-self-center.pt-1= p.co2_produced_with_unit
      %a.card-link.stretched-link{:href=>"#{product_path(p)}"}
