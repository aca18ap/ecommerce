- content_for :title, "Edit Business"

.container-fluid.devise-form-container.vertical-center
  .p-5
    %h1.text-center 
      = "Editing #{@business.name}"
    = simple_form_for @business, url: admin_business_path do |f|
      = f.error_notification
      .form-inputs
        = f.input :email, validate: true, id: 'email', type: 'email'
        = f.input :name, validate: true, id: 'name', type: 'text'
        = f.input :description, validate: true, id: 'description', type: 'text'
      .form-actions
        = f.button :submit, method: :update , id:'submit_button' , class: 'btn btn-ecommerce mt-4 w-100' 
  .p-2.bg-shade.text-center
    %p
      = link_to 'Delete Business', admin_business_path(@business), method: :delete, data: { confirm: 'Are you sure you want to delete this business?' }
