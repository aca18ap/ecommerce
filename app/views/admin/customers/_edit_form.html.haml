= simple_form_for @customer, url: admin_customer_path do |f|
  .modal-header
    %h2= "Editing #{@customer.username}"
    = link_to 'Back', admin_users_path
  .modal-body
    .card-body
      .email= f.input :email, validate: true, id: 'email', type: 'email'
    .card-body
      = f.input :username, validate: true, id: 'username', type: 'text'
    .card-body 
      = f.input :suspended, id: 'suspended'
  .modal-footer
    .pull-left

    = f.button :submit, method: :update , id:'submit_button' , class: 'btn btn-outline-dark'

= link_to 'Delete Customer', admin_customer_path(@customer), method: :delete, data: { confirm: 'Are you sure you want to delete this customer?' }