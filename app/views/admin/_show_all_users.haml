%table.table
    %thead
        %tr
            %th Email
            %th Role

    %tbody
        - @users.each do |u|
            %tr
                %td= u.email
                %td= u.role
                - if u != current_user
                    %td= link_to "Delete", method: :delete, controller: 'admin', data: { confirm: 'Are you sure you want to delete this user?' }

