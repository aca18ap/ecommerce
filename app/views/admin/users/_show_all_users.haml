
%table.table
    %thead
        %tr
            %th Email
            %th Role

    %tbody#show_all_users
        - @users.each do |u|
            %tr
                %td= u.email
                %td= u.role
                %td= link_to 'Edit user', edit_admin_user_path(u), class: 'ajax-modal', class: 'btn btn-xs'

                - if u != current_user
                    %td= link_to 'Delete', { action: :destroy, id: u.id }, method: :delete, class: 'btn btn-default btn-xs', data: { confirm: 'Are you sure?'}


