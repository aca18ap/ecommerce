- content_for :title, "Edit Staff Member"

.container-fluid.devise-form-container.vertical-center
  .p-5
    %h1.text-center 
      = "Editing Staff Member"
    = simple_form_for @staff, url: admin_staff_path do |f|
      = f.error_notification
      .form-inputs
        = f.input :email, validate: true, id: 'email', type: 'email'
        .text-center
          = f.label "Change role", class: 'py-3'
          = f.select :role, options_for_select(Staff.roles.map { |key, value| [key.humanize, key] }), id: 'role'
      .form-actions
        = f.button :submit, method: :update , id:'submit_button' , class: 'btn btn-ecommerce mt-4 w-100' 
  .p-2.bg-shade.text-center
    %p
      = link_to 'Delete Staff', admin_staff_path(@staff), method: :delete, data: { confirm: 'Are you sure you want to delete this staff member?' }
